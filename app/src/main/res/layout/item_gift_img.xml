<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ckb_gif_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableLeft="@drawable/ck_selector"
            android:gravity="center_vertical"
            android:padding="30px"
            android:textSize="30px" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_cart_image"
            android:layout_width="126px"
            android:layout_height="126px"
            android:background="@drawable/shape_cart_goods_border"
            android:padding="1px"
            android:scaleType="fitXY"
            android:visibility="gone"
            fresco:placeholderImage="@mipmap/icon_loading_bg"
            fresco:progressBarImage="@mipmap/icon_loading_bg" />

        <TextView
            android:id="@+id/tv_gift_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/shape_c3_corner_frame"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:text="x111111111111MM我是描描述我是描描述我是描描述我是描描述"
            android:textColor="#3c3c3c"
            android:textSize="26px" />

        <com.hq.expandablelistviewexample.widget.CustomView
            android:id="@+id/id_ct_customview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:gravity="right" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="10dp" />

</com.zhy.autolayout.AutoLinearLayout>